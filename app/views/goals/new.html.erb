<h1>Create Goal</h1>

<form action=" <%= goals_url %> " method="post">
  <%= auth_key %>
  <label>
    Title
    <input type="text" name="goal[title]" value=" <%=@goal.title%> ">
  </label>
  <label>
    Body
    <textarea name="goal[body]"> <%=@goal.body%> </textarea>
  </label>
  <label for="Private">
    Private
    <input type="checkbox"
           name="goal[private_goal]"
           value="<%= true %>"
           id="Private">
  </label>

  <input type="submit" value="Create Goal">
</form>
