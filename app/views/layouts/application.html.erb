<!DOCTYPE html>
<html>
<head>
  <title>HopesAndDreams</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <h4>Hi, <%= current_user.username %> </h4>
  <h4> <%= button_to "Sign Out", session_url, method: :delete %> </h4>
<% else %>
  <h4> <%= link_to "Sign In", new_session_url %>
    <%= link_to "Sign Up", new_user_url %></h4>

<% end %>

<%= yield %>

</body>
</html>
